<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:passwordToggleDrawable="@drawable/exit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_layout_log_in"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorGray">

        <LinearLayout
            android:layout_width="376dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_form_log_in"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp">
            <TextView
                android:id="@+id/textViewCreat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="45dp"
                android:gravity="center"
                android:text="Đăng kí"
                android:textSize="35dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/label_custom"
                android:drawableLeft="@drawable/ic_user_red"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Tên đăng nhập"
                android:inputType="textPersonName"
                android:textSize="@dimen/text_lg" />

            <EditText
                android:id="@+id/edtGmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/label_custom"
                android:drawableLeft="@drawable/ic_email_red"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Gmail"
                android:inputType="textPersonName"
                android:textSize="@dimen/text_lg" />

            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/label_custom"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Số điện thoại"
                android:inputType="textPersonName"
                android:textSize="@dimen/text_lg" />

            <EditText
                android:id="@+id/edtPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/label_custom"
                android:drawableLeft="@drawable/ic_lock_red"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:textSize="@dimen/text_lg"
                app:passwordToggleEnabled="true" />

            <EditText
                android:id="@+id/edtPass2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/label_custom"
                android:drawableLeft="@drawable/ic_lock_red"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Nhập lại mật khẩu"
                android:inputType="textPassword"
                android:textSize="@dimen/text_lg" />

            <EditText
                android:id="@+id/edtFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/label_custom"
                android:drawableLeft="@drawable/ic_edit"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Nhập Họ"
                android:inputType="textPersonName"
                android:textSize="@dimen/text_lg" />

            <EditText
                android:id="@+id/edtLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/label_custom"
                android:drawableLeft="@drawable/ic_edit"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Nhập Tên"
                android:inputType="textPersonName"
                android:textSize="@dimen/text_lg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:text="Chọn tỉnh"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_lg" />
                <Spinner
                    android:id="@+id/spnTinh"
                    android:layout_width="190dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="40dp"
                    android:gravity="center"
                    android:text="Chọn "
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_base" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:text="Chọn Huyện"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_lg" />

                <Spinner
                    android:id="@+id/spnHuyen"
                    android:layout_width="190dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="40dp"
                    android:gravity="center"
                    android:text="Chọn "
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_base" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:text="Chọn Xã"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_lg" />

                <Spinner
                    android:id="@+id/spnXa"
                    android:layout_width="190dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="40dp"
                    android:gravity="center"
                    android:text="Chọn "
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_lg" />
            </LinearLayout>
            <EditText
                android:id="@+id/edtDuong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/label_custom"
                android:drawableLeft="@drawable/ic_edit"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Nhập số nhà, tên Đường"
                android:inputType="textPersonName"
                android:textSize="@dimen/text_lg" />

            <Button
                android:id="@+id/btnDangKi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_button"
                android:text="Đăng kí"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_lg" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
