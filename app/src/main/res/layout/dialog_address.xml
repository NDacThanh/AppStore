<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_layout_log_in"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">


            <LinearLayout
                android:layout_width="376dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_form_log_in"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="97dp"
                        android:layout_height="wrap_content"
                        android:text="Chọn tỉnh"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_lg" />

                    <Spinner
                        android:id="@+id/spnTinh"
                        android:layout_width="190dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="40dp"
                        android:gravity="center"
                        android:text="Chọn "
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_base" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="97dp"
                        android:layout_height="wrap_content"
                        android:text="Chọn Huyện"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_lg" />

                    <Spinner
                        android:id="@+id/spnHuyen"
                        android:layout_width="190dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="40dp"
                        android:gravity="center"
                        android:text="Chọn "
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_base" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="97dp"
                        android:layout_height="wrap_content"
                        android:text="Chọn Xã"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_lg" />

                    <Spinner
                        android:id="@+id/spnXa"
                        android:layout_width="190dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="40dp"
                        android:gravity="center"
                        android:text="Chọn "
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_lg" />
                </LinearLayout>

                <EditText
                    android:id="@+id/edtDuong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/label_custom"
                    android:drawableLeft="@drawable/ic_edit"
                    android:drawablePadding="8dp"
                    android:ems="10"
                    android:hint="Nhập số nhà, tên Đường"
                    android:inputType="textPersonName"
                    android:textSize="@dimen/text_lg" />

                <Button
                    android:id="@+id/btnXacNhan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_button"
                    android:text="Xác Nhận"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_lg" />


            </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>